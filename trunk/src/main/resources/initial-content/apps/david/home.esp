<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html>
<head>
<title>David Mini CMS</title>
<%
load("header.esp");
%>
<script type="text/javascript" src="/apps/david/swfobject.js"></script>
<style type="text/css">
    body { background-color: #eee; padding: 20px; }
</style>
</head>
<body>
<div id="lCenter">
	<div id="desktop">
		<%
		load("menu.esp");
		%>
                <div id="contentPanel" class="centralPanel">
			<h3>Tag cloud</h3>
			<div id="flashcontent" align="center">

                        <script type="text/javascript">
                            var so = new SWFObject("/apps/david/tagcloud.swf", "tagcloud", "600", "400", "7", "#ffffff");
                            so.addParam("wmode", "transparent");
                            so.addVariable("tcolor", "0x333333");
                            so.addVariable("tcolor2", "0x009900");
                            so.addVariable("hicolor", "0x000000");
                            so.addVariable("tspeed", "100");
                            so.addVariable("distr", "true");
                            so.addVariable("xmlpath", "/content/tag.cloud");
                            so.write("flashcontent");
                        </script>

			</div>
		 </div>
	</div>
</div>

</body>
</html>
